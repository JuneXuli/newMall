/* pages/goods-detail/index.wxss */
page {
  font-size: 28rpx;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.txt-large {
  font-size: 36rpx;
}
.txt-orange {
  color: #ff6b46;
}
.container {
  background-color: #F2f2f2;
  min-height: 100%;
  padding:0;
  display: flex;
  flex: 1;
  justify-content: flex-start;
  align-items: flex-start;
}

.content, .content view {
  padding: 10rpx;
}
.content .txt-large {
  line-height: 60rpx;
}

.swiper-container {
  width: 750rpx;
  position: relative;  
}
.swiper-box {
  width:100%;
  height: 562.5rpx;
}
.slide-image {
  width: 750rpx;
  display: inline-block;
  /* overflow: hidden; */
  height:562.5rpx;
}

.footer-box{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow:0 0 8rpx 0 ;
  flex-direction: row;
  justify-content: flex-end;
}
.footer-box .now-exchange{
  text-align: center;
  height: 100%;
  width: 350rpx;
  line-height: 100rpx;
  background-color: #dfaf7e;
  color:#fff;
  font-size: 34rpx;
}
.footer-box .now-exchange-hover {
  background-color: #edbb89;
}