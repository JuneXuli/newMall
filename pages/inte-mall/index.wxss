/* pages/inte-mall/index.wxss */
page {
  font-size: 28rpx;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.txt-orange {
  color: #ff6b46;
}
.container {
  background-color: #F2f2f2;
  min-height: 100%;
  padding:0;
  display: flex;
  flex: 1;
  justify-content: flex-start;
}

.type-container {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
  position: fixed;
  top:0;
  left:0;
}
.type-navbar {
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background: #fff;
}
.type-box {
  width: 160rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item {
  border-bottom: 4rpx solid #fff;
}
.type-item-on {
  border-bottom: 4rpx solid #e64340;
}

.goods-container {
  width: 702rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between; 
  flex-wrap: wrap;
  padding: 24rpx;
}
.goods-box {
  width: 339rpx;
  height: 472rpx;
  background: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
}
.goods-box.goods-box-hover {
  background: #e9e9e9;
}
.img-box, .img-box image {
  width: 339rpx;
  height: 339rpx;
  overflow: hidden;
}
.goods-des {
  font-size: 24rpx;
  height: 137rpx;
  padding:8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  box-sizing: border-box;
}
.goods-des view {
  height: 45rpx;
  line-height: 45rpx;
  display: flex;
  flex-wrap: nowrap;
  overflow: hidden;
}

.goods-no {
  text-align: center;
  font-size: 24rpx;
}

/* 加载  */
.loading {
  height: 46rpx;
  padding-bottom: 24rpx;
  display: flex;
  align-items: center;
}
.loading image {
  width: 44rpx;
  height: 46rpx;
  margin-right: 4rpx;
}